<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Register">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textViewregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הרשמה"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layoutDirection="rtl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/textViewParentDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="פרטי ההורה"
                android:textColor="@color/teal_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView9"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/editTextName"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="268dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_overlay"
                android:ems="10"
                android:gravity="start|center_vertical"
                android:hint="שם ההורה"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorLink="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewParentDetails" />

            <EditText
                android:id="@+id/editTextMailR"
                android:layout_width="268dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_overlay"
                android:ems="10"
                android:gravity="start|center_vertical"
                android:hint="מייל"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorLink="#000000"
                app:layout_constraintStart_toStartOf="@+id/editTextName"
                app:layout_constraintTop_toBottomOf="@+id/editTextName" />

            <EditText
                android:id="@+id/editTextPasswordR"
                android:layout_width="268dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_overlay"
                android:ems="10"
                android:gravity="right|center_vertical"
                android:hint="סיסמה"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorLink="#000000"
                app:layout_constraintStart_toStartOf="@+id/editTextMailR"
                app:layout_constraintTop_toBottomOf="@+id/editTextMailR" />

            <EditText
                android:id="@+id/editTextCity"
                android:layout_width="268dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_overlay"
                android:ems="10"
                android:gravity="right|center_vertical"
                android:hint="עיר"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorLink="#000000" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="77dp"
                android:gravity="center"
                android:text="פרטי הילד/ה"
                android:textColor="@color/teal_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextPasswordR" />

            <EditText
                android:id="@+id/editTextChildName"
                android:layout_width="268dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_overlay"
                android:ems="10"
                android:gravity="start|center_vertical"
                android:hint="שם הילד/ה"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorLink="#000000"
                app:layout_constraintStart_toStartOf="@+id/editTextPasswordR"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="268dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_overlay"
                android:ems="10"
                android:gravity="start|center_vertical"
                android:hint="גיל"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorLink="#000000"
                app:layout_constraintStart_toStartOf="@+id/editTextChildName"
                app:layout_constraintTop_toBottomOf="@+id/editTextChildName" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="תחומי עניין:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxBoardGames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="משחקי קופסא"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBoxSience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="מדעים"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBoxNature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="טבע"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBoxSport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="ספורט"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBoxArt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="אומנות"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBoxGaming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="משחקי מחשב"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBoxMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="מוזיקה"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextOtherHobby"
                android:layout_width="268dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_overlay"
                android:ems="10"
                android:gravity="center|start|center_vertical"
                android:hint="אחר:"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorLink="#000000"
                app:layout_constraintStart_toStartOf="@+id/editTextPasswordR"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/editTextAge"
                app:layout_constraintTop_toBottomOf="@+id/editTextAge">

                <RadioButton
                    android:id="@+id/radioButtonMale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                    android:text="זכר"
                    android:textColor="#090808"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radioButtonFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                    android:text="נקבה"
                    android:textColor="#090808"
                    android:textSize="18sp" />

            </RadioGroup>

            <EditText
                android:id="@+id/editTextDetails"
                android:layout_width="268dp"
                android:layout_height="78dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_overlay"
                android:ems="10"
                android:gravity="start"
                android:hint="ספר/י לנו על הילד/ה שלך"
                android:inputType="textMultiLine"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:textColorLink="#000000" />

            <Button
                android:id="@+id/changedetailsbutton"
                android:layout_width="106dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/teal_700"
                android:onClick="register"
                android:text="הרשמה"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextDetails" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>