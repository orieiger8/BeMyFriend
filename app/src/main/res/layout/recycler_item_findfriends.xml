<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHobbies" />

    <TextView
        android:id="@+id/textViewReyclerKidName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="start"
        android:text="שם הילד"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRcyclerAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="גיל"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_ageTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewReyclerKidName"
        app:layout_constraintTop_toBottomOf="@+id/textViewReyclerKidName" />

    <TextView
        android:id="@+id/textViewRecyclerCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="עיר מגורים"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_cityTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewRcyclerAge"
        app:layout_constraintTop_toBottomOf="@+id/textViewRcyclerAge" />

    <TextView
        android:id="@+id/textView_ageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="גיל: "
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewReyclerKidName"
        app:layout_constraintTop_toBottomOf="@+id/textViewReyclerKidName" />

    <TextView
        android:id="@+id/textView_cityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עיר: "
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_ageTitle"
        app:layout_constraintTop_toBottomOf="@+id/textView_ageTitle" />

    <TextView
        android:id="@+id/textView_hobbiesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תחומי עניין: "
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_cityTitle"
        app:layout_constraintTop_toBottomOf="@+id/textView_cityTitle" />

    <TextView
        android:id="@+id/textViewHobbies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="תחומי עניין"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_hobbiesTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewRecyclerCity"
        app:layout_constraintTop_toBottomOf="@+id/textViewRecyclerCity" />

</androidx.constraintlayout.widget.ConstraintLayout>